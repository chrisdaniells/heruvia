{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@api": ["api/index"],
      "@apps/*": ["apps/*"],
      "@components/*": ["components/*"],
      "@config": ["config/index"],
      "@enums": ["enums/index"],
      "@interfaces": ["interfaces/index"],
      "@lib/*": ["lib/*"],
      "@root/*": ["./*"],
      "@store/*": ["store/*"],
    },
  },
  "exclude": [
    "node_modules",
    "public"
  ],
  "include": [
    "src/**/*"
  ],
}