{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "importHelpers": true,
    "baseUrl": "./src",
    "paths": {
      "@api": ["api/index"],
      "@apps/*": ["apps/*"],
      "@components/*": ["components/*"],
      "@config": ["config/index"],
      "@enums": ["enums/index"],
      "@interfaces": ["interfaces/index"],
      "@root/*": ["./*"],
    }
  }
}